{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../dist/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "debug": true
  },
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./app/environment.ts",
    "./app/fcp.module.ts",
    "./app/index.ts",
    "./app/movie-search.service.ts",
    "./app/personnel.view.ts",
    "./app/program-info.view.ts",
    "./app/schedule.view.ts",
    "./app/screening.view.ts",
    "./app/series-list.view.ts",
    "./app/series.view.ts",
    "./brochure.ts",
    "./electron-main.ts",
    "./main.ts",
    "./poster.ts",
    "./system-config.ts",
    "./typings.d.ts"
  ]
}
